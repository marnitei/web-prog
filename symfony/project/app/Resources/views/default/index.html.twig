{% extends '::base.html.twig' %}

{% block title %}Главная{% endblock %}

{% block body %}
    <div class="row">
        <div class="small-4 medium-3 medium-offset-1 columns content">
            <div class="news-header">
                <span>Новости</span>
            </div>
            <div class="news-list">
                $.ajax({
                    url: 'http://4pda.ru/feed/rss/',
                    type: 'GET',
                    dataType: 'jsonp',
                    success: function() { alert(xmlhttp.responseText); },
                    error: function(){ alert("Error") },
                    beforeSend: setHeader
                });
            </div>
        </div>
        <div class="small-8 medium-7 columns content">
            <div id="myCarousel" class="orbit-slide" data-orbit>
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                    <li data-target="#myCarousel" data-slide-to="4"></li>
                    <li data-target="#myCarousel" data-slide-to="5"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img class="img-responsive" src="{{ asset('img/slider/img1.jpg') }}">
                    </div>

                    <div class="item">
                        <img class="img-responsive" src="{{ asset('img/slider/img2.jpg') }}">
                    </div>

                    <div class="item">
                        <img class="img-responsive" src="{{ asset('img/slider/img3.jpg') }}">
                    </div>

                    <div class="item" >
                        <img class="img-responsive" src="{{ asset('img/slider/img7.jpg') }}">
                    </div>

                    <div class="item" >
                        <img class="img-responsive" src="{{ asset('img/slider/img5.jpg') }}">
                    </div>

                    <div class="item" >
                        <img class="img-responsive" src="{{ asset('img/slider/img6.jpg') }}">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="entity-header medium-10 medium-offset-1 columns content">
            <div class="small-2 medium-2 large-2 columns content">
                <span>Мероприятия</span>
            </div>
            <div class="col-xs-7 col-xs-offset-2 small-9 small-offset-1 medium-8 medium-offset-2 large-7 large-offset-3 columns content">
                <div class="entity-group-by">
                    <div class="item-menu"><a href="#">Кино</a></div>
                    <div class="item-menu"><a href="#">Спектакли</a></div>
                    <div class="item-menu"><a href="#">Концерты</a></div>
                    <div class="item-menu"><a href="#">Спорт</a></div>
                    <div class="item-menu"><a href="#">Вечеринки</a></div>
                    <div class="item-menu"><a href="#">Детям</a></div>
                    <div class="item-menu"><a href="#">Другое</a></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="events medium-10 medium-offset-1 columns">
            {% for event in events %}
                <div class="small-6 medium-4 large-3 columns">
                    <div class="event-div">
                        <img src="../img/posters/{{ event.poster }}" class=" img-responsive poster">
                        <a href="event/{{ event.id }}">{{ event.name }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        <div class="more medium-10 medium-offset-1 columns">
            <a href="{{ path('events_list') }}">Ещё...</a>
        </div>
    </div>
    <div class="row">
        <div class="entity-header medium-10 medium-offset-1 columns content">
            <div class="small-3 medium-3 large-3 columns content">
                <span>Места проведения</span>
            </div>
            <div class="small-9 medium-8 medium-offset-1 large-7 large-offset-2 content">
                <div class="entity-group-by">
                    <div class="item-menu"><a href="#">Кинотеатры</a></div>
                    <div class="item-menu"><a href="#">Театры</a></div>
                    <div class="item-menu"><a href="#">Спорт</a></div>
                    <div class="item-menu"><a href="#">Концерты</a></div>
                    <div class="item-menu"><a href="#">Клубы</a></div>
                    <div class="item-menu"><a href="#">Другое</a></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="small-12 medium-10 medium-offset-1 columns content news-header ">
            <div class="small-4 medium-3 large-3 columns content">
                <span>Введите город</span>
            </div>
            <div class="small-7 small-offset-1 medium-8 medium-offset-1 large-7 large-offset-2 columns content">
                <div class="city-search">
                    <input type="text">
                    <button type="submit">Найти</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="medium-10 medium-offset-1 columns content">
            <table class="table places-table">
                <thead class="table-head">
                    <th></th>
                    <th>Название</th>
                    <th>Тип</th>
                    <th>Описание</th>
                    <th>Адрес</th>
                </thead>
                <tbody>
                    {% for place in places %}
                        <tr>
                            <td></td>
                            <td>{{ place.name }}</td>
                            <td>{{ place.type }}</td>
                            <td>{{ place.description }}</td>
                            <td>{{ place.address }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="more medium-10 medium-offset-1">
            <a href="{{ path('places_list') }}">Ещё...</a>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            //Activate Carousel
            $("#carouselExampleIndicators").carousel();
        });
        $.ajax({
            url: 'http://yandex.ru/feed/rss/',
            type: 'GET',
            dataType: 'jsonp',
            success: function() { alert(xmlhttp.responseText); },
            error: function(){ alert("Error") }
        });
    </script>

{% endblock %}
