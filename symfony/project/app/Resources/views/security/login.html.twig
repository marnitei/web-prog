<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Project{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/foundation.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div class="container">
    <div class="well medium-3 medium-offset-4 columns">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('login') }}" method="post">
            <input type="text" class="form-control" placeholder="Username" name="_username" />
            <input type="password" class="form-control" placeholder="Password" name="_password" />
            <button type="submit" class="btn btn-success">Log in</button>
        </form>
    </div>
</div>
</body>
</html>